# Ambiente de Desenvolvimento
ENV=development
APP_NAME=go-mongo-app-dev
APP_PORT=8080
APP_HOST=0.0.0.0

# MongoDB Development
MONGO_HOST=mongo-dev
MONGO_PORT=27017
MONGO_DATABASE=app_development
